<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MatrixActivity">

    <com.mage.testuidemo.matcamera.MatrixView
        android:id="@+id/matrix"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="degree"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/degree"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="rotationX"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/rotationX"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="rotationY"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/rotationY"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="posttranslationX"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/translationX"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="posttranslationY"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/translationY"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="preTransX"
                   android:layout_height="wrap_content"/>
               <SeekBar
                   android:id="@+id/preTranX"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="wrap_content"
